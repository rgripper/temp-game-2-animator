{
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": "**/*.yml",
            "options": {
                "singleQuote": false,
                "tabWidth": 2
            }
        },
        {
            "files": "**/*.py",
            "options": {
                "printWidth": 180
            }
        }
    ]
}